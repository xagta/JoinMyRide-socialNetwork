{% extends '@PidevUser/layout.html.twig' %}
{% block title %}
    My Profile Settings
    {% endblock %}
{%block Page_title  %} My Profile Settings {% endblock %}
{% block Content %}
<div class="row">


    <!-- Widget -->
    <div class="col-md-4">
        <div class="sidebar left">

            <div class="my-account-nav-container">

                <ul class="my-account-nav">
                    <li class="sub-nav-title">Manage Account</li>
                    <li><a href="my-profile.htm" class="current"><i class="sl sl-icon-user"></i> My Profile</a></li>
                    <li><a href="my-bookmarks.htm"><i class="sl sl-icon-star"></i> Bookmarked Listings</a></li>
                </ul>

                <ul class="my-account-nav">
                    <li class="sub-nav-title">Manage Listings</li>
                    <li><a href="my-properties.htm"><i class="sl sl-icon-docs"></i> My Properties</a></li>
                    <li><a href="submit-property.htm"><i class="sl sl-icon-action-redo"></i> Submit New Property</a></li>
                </ul>

                <ul class="my-account-nav">
                    <li><a href="change-password.htm"><i class="sl sl-icon-lock"></i> Change Password</a></li>
                    <li><a href="#"><i class="sl sl-icon-power"></i> Log Out</a></li>
                </ul>

            </div>

        </div>
    </div>

    <div class="col-md-8">
        <div class="row">

        <form action="{{ path('MembreProfileAdd') }}" method="POST" >
            <div class="col-md-8 my-profile">

                <h4 class="margin-top-0 margin-bottom-30">My Account</h4>

                <label>Pseudo</label>
                <input name="pseudo" value="{{ profile.google }}" type="text">


                <label>Phone number</label>
                <input value="{{ profile.phonenumber }}" name="phone" placeholder="+216" type="text">
                    <label for="phone number">Show my Phone number</label>
                <input type="checkbox" name="phonecheck" checked>

                <h4 class="margin-top-50 margin-bottom-25">About Me</h4>
                <textarea name="Description" id="about" cols="30" rows="10">Maecenas quis consequat libero, a feugiat eros. Nunc ut lacinia tortor morbi ultricies laoreet ullamcorper phasellus semper</textarea>


                <h4 class="margin-top-50 margin-bottom-0">Social</h4>

                <label><i class="fa fa-twitter"></i> Twitter</label>
                <input name="twitter" value="{{ profile.twitter }}" type="text">

                <label><i class="fa fa-facebook-square"></i> Facebook</label>
                <input name="facebook" value="{{ profile.facebook }}" type="text">

                <label><i class="fa fa-google-plus"></i> Google+</label>
                <input name="google" value="{{ profile.google }}" type="text">

                <label><i class="fa fa-linkedin"></i> Linkedin</label>
                <input name="linkedin" value="{{ profile.linkedin }}" type="text">


                <button class="button margin-top-20 margin-bottom-20">Save Changes</button>
            </div>
        </form>
            <div class="col-md-4">
                <!-- Avatar -->
                <div class="edit-profile-photo">
                    <img src="{{ asset('bundles/views/images/agent-01.jpg') }}" alt="">
                    <div class="change-photo-btn">
                        <div class="photoUpload">
                            <span><i class="fa fa-upload"></i> Upload Photo</span>
                            <input type="file" class="upload">
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>

</div>
{% endblock %}